{
    "name": "robertboes/inertia-breadcrumbs",
    "description": "Laravel package to automatically generates breadcrumbs for your Inertia app",
    "keywords": [
        "RobertBoes",
        "laravel",
        "inertia-breadcrumbs"
    ],
    "homepage": "https://github.com/robertboes/inertia-breadcrumbs",
    "license": "MIT",
    "authors": [
        {
            "name": "Robert Boes",
            "email": "github@robertboes.nl",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "facade/ignition-contracts": "^1.0",
        "illuminate/contracts": "^8.37",
        "inertiajs/inertia-laravel": "^0.4.5",
        "spatie/laravel-package-tools": "^1.9.2",
        "symfony/process": "^5.4"
    },
    "require-dev": {
        "composer/composer": "^2.1",
        "diglactic/laravel-breadcrumbs": "^7.0",
        "nunomaduro/collision": "^5.10",
        "nunomaduro/larastan": "^1.0",
        "orchestra/testbench": "^6.22",
        "pestphp/pest": "^1.10",
        "pestphp/pest-plugin-laravel": "^1.1",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^9.4",
        "spatie/laravel-ray": "^1.26"
    },
    "suggest": {
        "diglactic/laravel-breadcrumbs": "Easily manage and configure your breadcrumbs"
    },
    "autoload": {
        "psr-4": {
            "RobertBoes\\InertiaBreadcrumbs\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RobertBoes\\InertiaBreadcrumbs\\Tests\\": "tests"
        }
    },
    "scripts": {
        "phpstan": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "RobertBoes\\InertiaBreadcrumbs\\InertiaBreadcrumbsServiceProvider"
            ],
            "aliases": {
                "InertiaBreadcrumbs": "RobertBoes\\InertiaBreadcrumbs\\Facades\\InertiaBreadcrumbs"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
